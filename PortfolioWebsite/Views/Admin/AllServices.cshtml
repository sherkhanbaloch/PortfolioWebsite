@using PortfolioWebsite.Models;

@model IEnumerable<Service>

<a class="btn btn-primary" asp-action="AddService" asp-controller="Admin">Add New Service</a>

<div class="row mt-5">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Services</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Edit
                                </th>
                                <th>
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.ServiceName
                                    </td>
                                    <td>
                                        @item.ServiceDescription
                                    </td>
                                    <td>
                                        @item.ServiceImage
                                    </td>
                                    <td>
                                        <a asp-action="UpdateService" asp-controller="Admin" asp-route-Id="@item.Id">Edit</a>
                                    </td>
                                    <td>
                                        <a asp-action="DeleteService" asp-controller="Admin" asp-route-Id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
