@using PortfolioWebsite.Models

@model Service

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Service</h4>
            <p class="card-description">
                -
            </p>
            <form class="forms-sample" method="post" asp-action="AddService" asp-controller="Admin">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="ServiceName"></label>
                        <input class="form-control" asp-for="ServiceName">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="ServiceImage"></label>
                        <input class="form-control" asp-for="ServiceImage">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="ServiceDescription"></label>
                        <textarea class="form-control" rows="4" asp-for="ServiceDescription"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Add Service</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>