@using PortfolioWebsite.Models;

@model IEnumerable<Skill>

<a class="btn btn-primary" asp-action="AddSkill" asp-controller="Admin">Add New Skill</a>

<div class="row mt-5">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Skills</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Display Order
                                </th>
                                <th>
                                    Edit
                                </th>
                                <th>
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.SkillName
                                        </td>
                                        <td>
                                            @item.DisplayOrder
                                        </td>
                                        <td>
                                            <a asp-action="UpdateSkill" asp-controller="Admin" asp-route-Id="@item.Id">Edit</a>
                                        </td>
                                        <td>
                                            <a asp-action="DeleteSKill" asp-controller="Admin" asp-route-Id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">
                                        No Skills Found
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
