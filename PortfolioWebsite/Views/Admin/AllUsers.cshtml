@using PortfolioWebsite.Models;

@model IEnumerable<User>

<a class="btn btn-primary" asp-action="AddUser" asp-controller="Admin">Add New User</a>

<div class="row mt-5">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Edit
                                </th>
                                <th>
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.UserName
                                    </td>
                                    <td class="py-1">
                                        <img src="~/images/users/@item.Image" alt="image" />
                                    </td>
                                    <td>
                                        <a asp-action="UpdateUser" asp-controller="Admin" asp-route-Id="@item.Id">Edit</a>
                                    </td>
                                    <td>
                                        <a asp-action="DeleteUser" asp-controller="Admin" asp-route-Id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
