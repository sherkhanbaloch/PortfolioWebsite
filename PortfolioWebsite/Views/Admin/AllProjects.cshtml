@using PortfolioWebsite.Models;

@model IEnumerable<Project>

<a class="btn btn-primary" asp-action="AddProject" asp-controller="Admin">Add New Project</a>

<div class="row mt-5">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Services</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Link
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Edit
                                </th>
                                <th>
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.ProjectName
                                    </td>
                                    <td>
                                        @item.ProjectDescription
                                    </td>
                                    <td>
                                        @item.ProjectLink
                                    </td>
                                    <td class="py-1">
                                        <img src="~/images/projects/@item.ProjectImage" alt="image" />
                                    </td>
                                    <td>
                                        @item.Categories.CategoryName
                                    </td>
                                    <td>
                                        <a asp-action="UpdateProject" asp-controller="Admin" asp-route-Id="@item.Id">Edit</a>
                                    </td>
                                    <td>
                                        <a asp-action="DeleteProject" asp-controller="Admin" asp-route-Id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
