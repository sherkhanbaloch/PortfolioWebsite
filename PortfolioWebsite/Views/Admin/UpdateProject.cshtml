@using PortfolioWebsite.ViewModel

@model ProjectVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Project</h4>
            <p class="card-description">
                -
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data" asp-action="UpdateProject" asp-controller="Admin">
                <input asp-for="Id" hidden />
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="ProjectName"></label>
                        <input class="form-control" asp-for="ProjectName">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="ProjectLink"></label>
                        <input class="form-control" asp-for="ProjectLink">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <input value="@ViewData["ProjectImage"]" hidden name="OldPic" />
                        <label asp-for="ProjectImage"></label>
                        <input class="form-control file-upload-info" asp-for="ProjectImage">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="CategoryId"></label>
                        <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control">
                            <option selected disabled>Select Category</option>
                            @foreach (var item in ViewBag.GetCategories)
                            {
                                <option value="@item.Id">@item.CategoryName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="ProjectDescription"></label>
                        <textarea class="form-control" rows="4" asp-for="ProjectDescription"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update Project</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>