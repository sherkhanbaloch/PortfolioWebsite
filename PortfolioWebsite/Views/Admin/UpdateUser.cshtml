@using PortfolioWebsite.ViewModel

@model UserVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update User</h4>
            <p class="card-description">
                -
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data" asp-action="UpdateUser" asp-controller="Admin">
                <input asp-for="Id" hidden />
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="Image"></label>
                        <input value="@ViewData["UserImage"]" hidden name="OldPic" />
                        <input class="form-control file-upload-info" asp-for="Image">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update User</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>